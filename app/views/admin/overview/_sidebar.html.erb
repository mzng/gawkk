<h1 class="section-header">Manage</h1>
<p>
	<%= link_to 'Channels', {:controller => "admin/channels"} %><br/>
	<%= link_to 'Comments', {:controller => "admin/comments"} %><br/>
	<%= link_to 'Suggestions', {:controller => "admin/suggestions"} %><br/>
	<%= link_to 'Users', {:controller => "admin/users"} %>
</p>

<h1 class="section-header">Statistics</h1>
<p>
	<%= link_to 'Comments', {:controller => "admin/statistics", :action => "comments"}, :style => bold_for('comments') %><br/>
	<%= link_to 'Likes', {:controller => "admin/statistics", :action => "likes"}, :style => bold_for('likes') %><br/>
	<%= link_to 'Registrations', {:controller => "admin/statistics", :action => "registrations"}, :style => bold_for('registrations') %>
</p>

<h1 class="section-header">Actions</h1>
<p>
	<% if Parameter.status?('front_page_subscription_preview_enabled') -%>
		<%= link_to 'Disable Front Page Subscriptions', {:controller => 'admin/parameters', :action => 'disable', :id => 'front_page_subscription_preview'}, :confirm => 'Are you sure?' %>
		<span style="color:gray;font-size:8pt;">(Admins Only)</span><br/>
	<% else -%>
		<%= link_to 'Enable Front Page Subscriptions', {:controller => 'admin/parameters', :action => 'enable', :id => 'front_page_subscription_preview'}, :confirm => 'Are you sure?' %>
		<span style="color:gray;font-size:8pt;">(Admins Only)</span><br/>
	<% end -%>
	
	<% if Parameter.status?('front_page_sidebar_enabled') -%>
		<%= link_to 'Disable Front Page Sidebar', {:controller => 'admin/parameters', :action => 'disable', :id => 'front_page_sidebar'}, :confirm => 'Are you sure?' %>
		<span style="color:gray;font-size:8pt;">(Admins Only)</span><br/>
	<% else -%>
		<%= link_to 'Enable Front Page Sidebar', {:controller => 'admin/parameters', :action => 'enable', :id => 'front_page_sidebar'}, :confirm => 'Are you sure?' %>
		<span style="color:gray;font-size:8pt;">(Admins Only)</span><br/>
	<% end -%>
</p>
<p>
	<% if Parameter.status?('messaging_layer_enabled') -%>
		<%= link_to 'Disable Messaging Layer', {:controller => 'admin/parameters', :action => 'disable', :id => 'messaging_layer'}, :confirm => 'Are you sure?' %><br/>
	<% else -%>
		<%= link_to 'Enable Messaging Layer', {:controller => 'admin/parameters', :action => 'enable', :id => 'messaging_layer'}, :confirm => 'Are you sure?' %><br/>
	<% end -%>
	
	<% if Parameter.status?('job_queue_enabled') -%>
		<%= link_to 'Disable Job Queue', {:controller => 'admin/parameters', :action => 'disable', :id => 'job_queue'}, :confirm => 'Are you sure?' %><br/>
	<% else -%>
		<%= link_to 'Enable Job Queue', {:controller => 'admin/parameters', :action => 'enable', :id => 'job_queue'}, :confirm => 'Are you sure?' %><br/>
	<% end -%>
</p>
<p>
	<% if Parameter.status?('feed_importer_status') -%>
		<%= link_to 'Shutdown Feed Importers', {:controller => 'admin/import', :action => 'shutdown'}, :confirm => 'Are you sure?' %><br/>
	<% else -%>
		<span style="text-decoration:line-through;">Shutdown Feed Importers</span><br/>
	<% end -%>
	
	<%= link_to 'Fix Recent Thumbnails', {:controller => 'admin/import', :action => 'fix_thumbnails'}, :confirm => 'Are you sure?' %><br/>
</p>