<%= render :partial => "/layouts/content_header_simple", :locals => {:title => "Admin", :crumbs => [{:name => 'Admin', :params => {:controller => 'admin/overview'}}, {:name => 'Searches'}]} %>

<div id="content-main">
  <table>
    <tr>
      <th width="400px">Query</th>
      <th>Date</th>
    </tr>
    <% @searches.each do |s| %>
      <tr>
        <td><%= s.query %></td>
        <td><%= s.created_at.strftime("%Y-%m-%d") %></td>
      </tr>
    <% end %>
  </table>
</div>
