<div id="header">
	<table cellpadding="0" cellspacing="0">
		<td>
			<%= image_tag('logo-fb.png') %>
		</td>
		<td id="search">
			<% form_tag({:controller => '/search'}, :method => 'get') do -%>
				<input id="search-field" type="text" name="q" value="Search..." onfocus="descriptiveField(this, 'Search...', true);" onblur="descriptiveField(this, 'Search...', false);"/><input id="search-submit" type="image" src="/images/fb-search-blue.gif"/>
			<% end -%>
		</td>
	</table>
</div>