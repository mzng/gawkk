<% page		||= nil -%>
<% crumbs	||= Array.new -%>
<% crumbs	= [{:name => 'Home', :params => root_link(true) }].concat(crumbs) -%>
<% q			||= '' -%>

<div id="breadcrumbs">
	<%= crumbs.collect{|link| link[:params].blank? ? link[:name] : link_to(link[:name], link[:params])}.join(' &gt; ') %>
	<% if !page.nil? -%>
		&gt; Page <%= page %>
	<% end -%>
	<% if !q.blank? -%>
		&gt; Search Results for <em><%= q %></em>
	<% end -%>
</div>
