<% title 				||= '&nbsp;' -%>
<% light				||= false -%>
<% description	||= '' -%>
<% link 				||= '#' -%>
<% count				||= 0 -%>
<% set_size			||= 4 -%>
<% force_link 	||= false -%>

<h1 class="section-header<%= ' light-header' if light %>">
	<% if force_link or count > 0 -%><span><%= link_to "View All#{count > set_size ? ' ' + count.to_s : ''}", link %></span><% end -%>
	<%= title %> <span class="description"><%= description %></span>
</h1>