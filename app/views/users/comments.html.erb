<%= render :partial => "/layouts/content_header", :locals => {:avatar_path => @user.thumbnail, :title => @user.username, :description => "Comments left for #{@user.username}", :user => @user} %>
<%= render :partial => "/layouts/breadcrumbs", :locals => {
			:crumbs => [{:name => 'Members', :params => {:controller => 'users'}}, 
									{:name => @user.username, :params => user_path(:id => @user)}, 
									{:name => 'Comments', :params => {:controller => 'users', :action => 'comments', :id => @user}}]} %>

<div id="content-main">
	<%= render :partial => "/layouts/filter_bar", :locals => {:title => 'Comments', 
			:links => [{:name => 'Activity', :options => user_path(:id => @user), :selected => false}, 
			{:name => 'Comments', :options => {:controller => 'users', :action => 'comments', :id => @user}, :selected => true}]} %>
	
	<div class="coming-soon">
		<h2>Coming Soon</h2>
	</div>
</div>

<div id="content-sidebar">
	<%= render :partial => "/users/sidebar", :locals => {:user => @user} %>
</div>