<div id="navigable-container">
	<%= render :partial => "/layouts/navigation" %>
	<div id="content-main">
		<h1 id="filter-bar"><span class="title-container">Friends of <%= @user.username %></span></h1>
		
		<%= render :partial => "/layouts/breadcrumbs", :locals => {:page => @page, 
					:crumbs => [{:name => 'Members', :params => {:controller => 'users'}}, 
											{:name => @user.username, :params => user_path(:id => @user)}, 
											{:name => 'Friends', :params => {:controller => 'users', :action => 'friends', :id => @user}}]} %>
		
		<div class="grid-container">
			<%= render @users %>
		</div>
		<%= render :partial => "/layouts/pagination", :locals => {:collection => @users} %>
	</div>
</div>

<div id="content-sidebar">
	<%= render :partial => "/users/sidebar", :locals => {:user => @user} %>
</div>
