<%= render :partial => "/layouts/pitch" %>

<div id="content-main">
	<%= render :partial => "/layouts/filter_bar", :locals => {:title => 'Subscriptions', 
			:links => [{:name => 'Activity', :options => '/', :selected => false}, 
			{:name => 'Subscriptions', :options => {:controller => 'videos', :action => 'subscriptions'}, :selected => true}]} %>
	<%= render @videos %>
	<%= render :partial => "/layouts/pagination", :locals => {:title => 'View More Videos From Subscriptions', :collection => @videos} %>
</div>

<div id="content-sidebar">
	<% if user_logged_in? -%>
		<%= render :partial => "/users/sidebar", :locals => {:welcome => true, :user => logged_in_user} %>
	<% end -%>
	
	<%= render :partial => "/layouts/set", :locals => {:title => 'Active Members', 
			:link => {:controller => 'users'}, :force_link => true, :collection => @active_members} %>
	<%= render :partial => "/layouts/set", :locals => {:title => 'Categories', 
			:link => {:controller => 'videos'}, :force_link => true, :collection => @categories} %>
	<%= render :partial => "/layouts/set", :locals => {:title => 'Featured Channels', 
			:link => {:controller => 'channels'}, :force_link => true, :collection => @featured_channels} %>
</div>
