<% container_id ||= '' -%>

<% if user_logged_in? and logged_in_user.liked?(video) -%>
	<%= link_to_remote 'Unlike', {:url => {:controller => 'videos', :action => 'unlike', :id => video, :container_id => container_id}, :loading => "work('#{video.id}','#{container_id}');", :complete => "reloadActivity('#{video.id}','#{container_id}','#{params[:_session_id]}');"} %>
<% else -%>
	<%= link_to_remote 'Like', {:url => {:controller => 'videos', :action => 'like', :id => video, :container_id => container_id}, :loading => "work('#{video.id}','#{container_id}');", :complete => "reloadActivity('#{video.id}','#{container_id}','#{params[:_session_id]}');"} %>
<% end -%>