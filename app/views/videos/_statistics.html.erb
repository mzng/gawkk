<% if user_logged_in? or params[:force] -%>
	<table class="video-statistics" cellpadding="2" cellspacing="0">
		<tr>
			<td>Category:</td>
			<td><%= smart_category_link(video.category, video.popular?) %></td>
			<td></td>
		</tr>
		<tr>
			<td>Permalink:</td>
      <td><input type="text" value="<%= smart_video_link(video, true) %>" readonly="readonly" onclick="this.select();" /></td>
		</tr>
		<% if !video.short_code.blank? -%>
			<tr>
				<td>Shortlink:</td>
				<td><input type="text" value="http://gawkk.com/v/<%= video.short_code %>" readonly="readonly" onclick="this.select();" /></td>
			</tr>
		<% end -%>
		<% if !video.embed_code.blank? -%>
		<tr>
			<td>Embed:</td>
			<td><input type="text" value='<%= video.safe_embed_code %>' readonly="readonly" onclick="this.select();" /></td>
		</tr>
		<% end -%>
	</table>
<% end -%>
