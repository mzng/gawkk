<% subscribable = false if subscribable.nil?  -%>

<% content_tag_for(:div, channel) do -%>
	<%= render(:partial => "/channels/subscribe", :locals => {:channel => channel}) if subscribable %>
	<%= link_to image_tag(channel.user.thumbnail.blank? ? 'profile-pic.jpg' : channel.user.thumbnail), channel_path(:user => channel.user, :channel => channel) %>
	<%= link_to channel.user.username, channel_path(:user => channel.user, :channel => channel) %>
<% end -%>
