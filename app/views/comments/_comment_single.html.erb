<% if comment.commentable -%>
	<% content_tag_for(:table, comment, :class => 'comment', :cellpadding => 0, :cellspacing => 0) do -%>
		<tr>
			<td class="avatar" rowspan="2">
				<%= link_to image_tag(comment.user.thumbnail.blank? ? 'profile-pic.jpg' : comment.user.thumbnail), user_path(:id => comment.user) %>
			</td>
			<td class="body">
				<%= link_to comment.user.username, user_path(:id => comment.user) %>: <%=h comment.body %>
				<span title="<%= comment.created_at %>"><%= time_ago_in_words(comment.created_at) %> ago</span>
			</td>
		</tr>
		<tr>
			<td>
				<%= render :partial => "/videos/video", :locals => {:video => comment.commentable, :inline => false} %>
			</td>
		</tr>
	<% end -%>
<% end -%>