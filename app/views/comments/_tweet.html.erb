<% commentable ||= nil -%>

<% if user_logged_in? and !commentable.nil? -%>
	<label for="tweet_it_for_<%= commentable.id %>">
		<%= check_box 'tweet', 'it', {:id => "tweet_it_for_#{commentable.id}", :onchange => "updateCharacterCount('#{commentable.id}', $('new_comment_area_for_#{commentable.id}'));", :checked => logged_in_user.auto_tweet?} %>Also post to Twitter
		<% if logged_in_user.auto_tweet? -%>as <%= link_to_remote logged_in_user.twitter_account.username, :url => {:controller => 'twitter', :action => 'request_credentials', :tweet_it => '1', :force => true}  %><% end -%>
	</label>
	<% if !logged_in_user.auto_tweet? -%>
		<%= observe_field "tweet_it_for_#{commentable.id}", :url => {:controller => 'twitter', :action => 'request_credentials'}, :with => 'tweet_it' %>
	<% end -%>
<% end -%>