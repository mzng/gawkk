<table id="news_item_<%= news_item.id %>" class="item" cellpadding="0" cellspacing="0">
	<tr>
		<td class="image" rowspan="2">
			<%= link_to image_tag(news_item.user.thumbnail.blank? ? 'profile-pic.jpg' : news_item.user.thumbnail), user_path(:id => news_item.user) %>
		</td>
		<td class="title">
			<%= link_to news_item.user.username, user_path(:id => news_item.user) %>
		</td>
	</tr>
	<tr>
		<td class="status">
			<%= news_item.message %>
			<% if user_can_edit?(news_item) -%>
				<span class="delete">
					- <%= link_to 'Delete', {:controller => 'news_items', :action => 'destroy', :id => news_item}, :confirm => 'Are you sure?', :method => :post %>
				</span>
			<% end -%>
		</td>
	</tr>
</table>