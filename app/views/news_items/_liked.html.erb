<% container_id ||= '' -%>

<div id="likes_for_<%= video.id %><%= container_id %>" class="activity">
	<% video.likes_by(@base_user, @include_followings) do |likes| -%>
		<table class="inline" cellpadding="0" cellspacing="0">
			<tr>
				<td class="gutter">&nbsp;</td>
				<td class="image-small">
					<%= image_tag('tick.png') %>
				</td>
				<td colspan="2">
					Liked by <%= summarize_likes(likes) %>
					<span class="like">- <span class="like_for_<%= video.id %>"><%= render :partial => "/videos/like", :locals => {:video => video, :container_id => container_id} %></span></span>
				</td>
			</tr>
		</table>
	<% end -%>
</div>