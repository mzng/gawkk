<%= render :partial => "/layouts/content_header_simple", :locals => {:title => "Search Results for <em>#{@q}</em>"} %>

<div id="content-main">
	<%= render :partial => "/layouts/filter_bar", :locals => {:title => "Search Videos", :include_search => true, 
			:links => [{:name => 'Channels', :options => {:controller => 'search', :action => 'channels', :q => @q}, :selected => false}, 
			{:name => 'Members', :options => {:controller => 'search', :action => 'members', :q => @q}, :selected => false}, 
			{:name => 'Videos', :options => {:controller => 'search', :action => 'videos', :q => @q}, :selected => true}]} %>
	<div class="grid-container">
		<%= render @videos %>
	</div>
	<%= render :partial => "/layouts/pagination", :locals => {:collection => @videos, :options => {:q => @q}} %>
</div>

<div id="content-sidebar">
	
</div>