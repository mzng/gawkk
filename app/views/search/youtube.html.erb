<div id="navigable-container">
	<div id="content-main">
		<h1 id="filter-bar"><span class="title-container">Search Results for <em><%= @q %></em></span></h1>
		
		<%= render :partial => "/layouts/breadcrumbs", :locals => {:page => @page, :crumbs => [{:name => 'Search', :params => {:action => 'index', :q => @q}}, {:name => 'YouTube'}, {:name => "<em>#{@q}</em>"}]} %>
		
		<%= render :partial => "/search/search", :locals => {:separated => false} %>
		
		<h1 id="filter-bar">YouTube Results</h1>
		<%= render :partial => '/videos/video_youtube', :collection => @result.videos %>
		<%= render :partial => "/layouts/pagination", :locals => {:title => 'View More Search Results', :collection => @result.videos, :options => {:q => @q}} %>
	</div>
</div>

<div id="content-sidebar">
	<%= render :partial => "/layouts/set", :locals => {:title => 'Featured Channels', 
			:link => {:controller => 'channels'}, :force_link => true, :collection => @featured_channels} %>
</div>
